# DealHunter Production Environment Variables
# Copy this file to .env.production and fill in the values

# ============================================
# DATABASE
# ============================================
POSTGRES_USER=dealhunter
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=dealhunter
DATABASE_URL=postgresql://dealhunter:your-secure-password-here@postgres:5432/dealhunter

# ============================================
# REDIS
# ============================================
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379

# ============================================
# AUTHENTICATION
# ============================================
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-secure-nextauth-secret-here

# ============================================
# AI SERVICES
# ============================================
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL=https://your-domain.com
NODE_ENV=production
